<!DOCTYPE html>
<html>
<head>
  <title>AirNZG</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if !!flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if !!flash[:errors] %>
    <ul class="errors">
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

<%= yield %>

</body>
</html>
